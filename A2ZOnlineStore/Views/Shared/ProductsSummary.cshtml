@model Product

<div class="col-sm-4 col-lg-4 col-md-4" style="min-height:500px; max-height:500px;">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="" class="product-image" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Product" asp-action="Details" asp-route-ProductId="@Model.ProductId">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="text-right addToCart">
            <p class="button ">
                <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-ProductId="@Model.ProductId">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>